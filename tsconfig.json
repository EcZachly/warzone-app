{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": false,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "./routes/**/*",
    "./src/**/*",
    "./bin/**/*",
    "./config/**/*",
    "./lib/**/*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "src/.next"
  ]
}
